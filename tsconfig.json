{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "types": ["jest", "node"],
    },
    "include": ["src/**/*", "__tests__/**/*"], // Include your test files
    "exclude": ["node_modules"] // Exclude node_modules
}